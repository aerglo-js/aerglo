{
	"compilerOptions": {
		"declaration": true,
		"importHelpers": true,
		"module": "commonjs",
		"outDir": "lib",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"target": "es2017",
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "test", "lib"]
}
